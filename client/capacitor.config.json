{
  "appId": "com.app-name.app",
  "appName": "App Name",
  "webDir": "dist",
  "server": {
    "androidScheme": "http",
    "url": "http://${app_server_addr}.com/",
    "allowNavigation": ["${app_server_addr}.com", "*.${app_server_addr}.com", "${app_server_addr}.com/*"],
    "cleartext": true
  },
  "android": {
    "allowMixedContent": true
  },
  "plugins": {
    "CapacitorCookies": {
      "enabled": true
    }
  }
}
